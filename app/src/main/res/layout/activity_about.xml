<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutActivity"
        android:background="@color/et_background">
    <TextView android:layout_width="323dp" android:layout_height="94dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:background="@drawable/edit_text_customized"
              android:text="@string/develop_name"
              android:textSize="20dp"
              android:textStyle="bold"
              android:textAlignment="center"
              android:id="@+id/textView2"
              android:paddingTop="30dp"
              app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:background="@drawable/edit_text_customized"
            android:layout_width="319dp"
            android:layout_height="207dp" app:srcCompat="@drawable/logo2"
            android:id="@+id/imageView2" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.543"/>
    <TextView
            android:text="Version: 1.0"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:id="@+id/textView"
            android:background="@drawable/edit_text_customized"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"

            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>