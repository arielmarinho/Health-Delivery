<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/login_background"
        android:id="@+id/fff">

    <EditText
            android:background="@drawable/edit_text_customized"
            android:layout_width="228dp"
            android:layout_height="57dp"
            android:hint="@string/hint_Email"
            android:id="@+id/et_Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.491"/>
    <EditText
            android:background="@drawable/edit_text_customized"
            android:layout_width="228dp"
            android:layout_height="57dp"
            android:hint="@string/hint_password"
            android:id="@+id/et_Password"
            android:inputType="textPassword"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/et_Email"
            app:layout_constraintHorizontal_bias="0.487"/>
    <Button android:text="Sign In"
            android:textColor="#FCFFFD"
            android:textSize="25sp"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/button_customized"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:id="@+id/btn_Login"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/et_Password"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button android:text="Sign Up"
            android:textColor="#FCFFFD"
            android:textSize="25sp"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/button_customized"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:id="@+id/btn_CreateAccount"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_Login" app:layout_constraintHorizontal_bias="0.497"/>

    <ImageView
            android:layout_width="121dp"
            android:layout_height="101dp"
            app:srcCompat="@drawable/logo2"
            android:id="@+id/imageView"
            android:background="#458B74"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>